@model VideoShare.ViewModels.Video.VideoWatch_vm

<style>
  video {
    width: 100%;
    border-radius: 20px;
    box-shadow: 0 15px 30px rgba(0,0,0,0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    outline: none;
  }
    video:hover {
      box-shadow: 0 20px 40px rgba(0,0,0,0.9);
    }
    .font-btn {
      font-size: 1.2rem;
    }
</style>

<a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">Back</a>

<div class="row mt-3">
  <div class="col-lg-9 mb-2">
    <video controls>
      <source src="/Video/GetVideoFile?videoId=@Model.Id" type="" />
      Your browser does not support the video tag.
    </video>
    <div class="d-flex justify-content-between mt-2">
      <section>
        <span class="badge bg-warning font-btn" id="increase-views-btn">
          <i class="bi bi-eye"></i><span id="view-count" class="ms-2">@Model.ViewersCount.ToString("N0")</span>
        </span>
      </section>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="card border-secondary mb-3">
      <div class="card-header">
        <p class="text-white fw-bold h4">@Model.Title</p>
        <p>
          @SD.TimeAgo(Model.CreatedAt)
        </p>
        <div class="d-flex align-content-center justify-content-between">
          <div>
            <h6 class="text-success text-decoration-none">@Model.ChannelName</h6>
          </div>
        </div>
      </div>
      <div class="card-body">
        <p class="card-text fw-bold">
          Description:
        </p>
        <p class="card-text">
          @Model.Description
        </p>
      </div>
    </div>
  </div>
</div>
