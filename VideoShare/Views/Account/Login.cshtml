@model VideoShare.ViewModels.Account.Login_vm

<div class="d-flex justify-content-center">
  <div class="col-lg-5">
    <main class="form-signin">
      <form method="post">
        <input hidden type="text" asp-for="ReturnUrl" />
        <div class="text-center my-4">
          <div class="mb-3 font-weight-normal">Login</div>
        </div>

        <div class="form-floating mt-5 mb-3">
          <input asp-for="UserName" placeholder="Username or Email" class="form-control is-invalid" />
          <label asp-for="UserName"></label>
          <span asp-validation-for="UserName" class="invalid-feedback"></span>
        </div>

        <div class="form-floating mb-3">
          <input asp-for="Password" type="password" placeholder="Password" class="form-control is-invalid" />
          <label asp-for="Password"></label>
          <span asp-validation-for="Password" class="invalid-feedback"></span>
        </div>

        <div class="form-floating">
          <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="d-grid mt-4 px-1">
          <button class="btn btn-lg btn-info" type="submit">
            Login
          </button>
        </div>
      </form>
    </main>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}